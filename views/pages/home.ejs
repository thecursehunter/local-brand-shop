<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layouts/head', { title: 'Local Shop | Bags' }) %>
</head>
<body class="background on-surface-text">

  <!-- Header -->
  <header class="top-bar">
    <div class="container">
      <a href="/" class="logo">
        <img src="/images/logo.svg" alt="Local Shop">
      </a>
    </div>
  </header>

  <!-- Hero Section -->
  <main>
    <section class="hero">
      <div class="container">
        <h1 class="headline-large">We just simply sells bags</h1>
        <button class="button filled">Shop Now</button>
      </div>
    </section>

    <!-- Best Sellers -->
    <section class="card outlined">
      <h2 class="title-medium">Best Sellers</h2>
      <div class="lg-col-2">
        <div class="card elevated">
          <img src="/images/products/bag1.jpg" alt="Bag 1" class="img-cover">
          <h3 class="title-small">Leather Tote</h3>
          <p class="body-medium">$120</p>
        </div>
        <div class="card elevated">
          <img src="/images/products/bag2.jpg" alt="Bag 2" class="img-cover">
          <h3 class="title-small">Classic Backpack</h3>
          <p class="body-medium">$150</p>
        </div>
      </div>
    </section>

    <!-- Collections -->
    <section class="card outlined">
      <h2 class="title-medium">Collections</h2>
      <div class="lg-col-2">
        <div class="card elevated">
          <img src="/images/products/collection1.jpg" alt="Collection 1" class="img-cover">
          <h3 class="title-small">Totes</h3>
        </div>
        <div class="card elevated">
          <img src="/images/products/collection2.jpg" alt="Collection 2" class="img-cover">
          <h3 class="title-small">Backpacks</h3>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <p class="body-medium on-surface-variant-text">&copy; 2025 Local Shop</p>
  </footer>

</body>
</html>